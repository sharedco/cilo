# Cilo Server Self-Host Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED
# =============================================================================

# Domain for your Cilo server (e.g., cilo.internal.company.com)
CILO_DOMAIN=cilo.example.com

# PostgreSQL password (generate a secure random password)
POSTGRES_PASSWORD=changeme_use_a_strong_password

# URL-encoded POSTGRES_PASSWORD (required if password contains special characters like /, :, @)
POSTGRES_PASSWORD_URLENCODED=changeme_use_a_strong_password

# =============================================================================
# MACHINE PROVIDER
# =============================================================================

# Provider type: "manual" or "hetzner"
# - manual: You register existing machines manually
# - hetzner: Cilo auto-provisions VMs on Hetzner Cloud
CILO_PROVIDER=manual

# Hetzner API token (only required if CILO_PROVIDER=hetzner)
HETZNER_API_TOKEN=

# =============================================================================
# VM POOL (only for cloud providers like Hetzner)
# =============================================================================

# Minimum number of ready VMs to keep in the pool
CILO_POOL_MIN_READY=3

# Maximum total VMs allowed
CILO_POOL_MAX_TOTAL=20

# VM size (Hetzner server type)
# Options: cx11, cx21, cx31, cx41, cx51 (Shared vCPU)
#          cpx11, cpx21, cpx31, cpx41, cpx51 (Shared AMD)
#          ccx12, ccx22, ccx32, ccx42, ccx52, ccx62 (Dedicated)
CILO_POOL_VM_SIZE=cx31

# Region for VM provisioning
# Options: nbg1 (Nuremberg), fsn1 (Falkenstein), hel1 (Helsinki), 
#          ash (Ashburn), hil (Hillsboro)
CILO_POOL_REGION=nbg1

# Custom VM image ID (from Packer build)
# Leave empty to use default Ubuntu image
CILO_POOL_IMAGE_ID=

# =============================================================================
# FEATURES
# =============================================================================

# Enable usage billing (for hosted product)
CILO_BILLING_ENABLED=false

# Enable Prometheus metrics endpoint at /metrics
CILO_METRICS_ENABLED=true

# Auto-destroy idle environments after N hours (0 = disabled)
CILO_AUTO_DESTROY_HOURS=8
